<IfModule mod_rewrite.c>
RewriteEngine On

# Block dangerous external domain
RewriteCond %{HTTP_REFERER} ^http://cdn\.jsinit\.directfwd\.com [NC]
RewriteRule .* - [F]

# Allow PDFs and other static files
RewriteCond %{REQUEST_URI} !\.(?:pdf|css|js|jpe?g|png|gif|woff2?|ttf|svg|ico)$ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]
</IfModule>

RewriteEngine On

# Remove .php extension from URL
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+?)/?$ $1.php [L]
